<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      {{#each blogs}}
        <div class="post-preview">
          <a href="post/{{_id}}">
            <h2 class="post-title">
              {{title}}
            </h2>
          </a>
          <p class="post-meta">Posted by <a href="#">{{author}}</a> on {{moment createDate}}</p>
        </div>
      {{/each}}
      <hr>
      <!-- Pager -->
      <ul class="pager">
        <li class="next">
          <a href="#">Older Posts &rarr;</a>
        </li>
      </ul>
    </div>
  </div>
</div>

<hr>