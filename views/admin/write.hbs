    <script type="text/javascript" src="/js/mditor.js"></script>


    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Main content -->
      <section class="content">
        <!-- Your Page Content Here -->
        {{#if post}}

          <form action="/update" method="POST">
            <div class="form-group " style="display:none">
              <label for="">_ID</label>
              <input class="form-control" name="_id" value="{{post._id}}">
            </div>
            <div class="form-group col-sm-3">
              <label for="">标题</label>
              <input class="form-control" name="title" value="{{post.title}}">
            </div>
            <div class="form-group col-sm-2">
              <label for="">作者</label>
              <input class="form-control" name="author" value="{{post.author}}">
            </div>
            <div class="form-group col-sm-2 col-sm-offset-5">
              <label for=""></label>
              <input class="form-control" type="submit" value="发布">
            </div>
            <div class="form-group col-sm-12">
              <textarea name="content" id="editor">{{post.content}}</textarea>
            </div>
          </form>

        {{else}}

          <form action="/write" method="POST">
            <div class="form-group col-sm-3">
              <label for="">标题</label>
              <input class="form-control" name="title" value="">
            </div>
            <div class="form-group col-sm-2">
              <label for="">作者</label>
              <input class="form-control" name="author" value="">
            </div>
            <div class="form-group col-sm-2 col-sm-offset-5">
              <label for=""></label>
              <input class="form-control" type="submit" value="发布">
            </div>
            <div class="form-group col-sm-12">
              <textarea name="content" id="editor"></textarea>
            </div>
          </form>

        {{/if}}

      </section><!-- /.content -->
    </div><!-- /.content-wrapper -->



  <script type="text/javascript">
    var mditor = new Mditor("#editor",{
      height:250,
      fixedHeight:true
    });
    mditor.openPreview()
  </script>
